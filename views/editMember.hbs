<div class="profile-container">
    <div class="row">
        <div class="col-sm-6">
            {{> memberPartial this}}
        </div>
        <div class="col-sm-6">
            <h2>Edit Profile</h2>

            <form action="/editMember/{{id}}" method="POST">
                <div class="form-group">
                    <label for="usernameField">Username</label>
                    <input type="text" class="form-control" id="usernameField" name="username" value="{{username}}">
                </div>
                <div class="form-group">
                    <label for="passwordField">Name</label>
                    <input type="text" class="form-control" id="nameField" name="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="passwordField">Description</label>
                    <input type="text" class="form-control" id="descriptionField" name="description"
                        value="{{description}}">
                </div>
                {{#if errorMessage}}
                <p class="errorMessage">{{errorMessage}}</p>
                {{/if}}
                <button type="submit" class="btn btn-warning">Update Profile</button>
            </form>

        </div>
    </div>
</div>